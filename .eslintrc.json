{
    "env": {
        "browser": false,
        "es2021": true,
        "node": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "requireConfigFile": false,
        "babelOptions": {
            "presets": ["@babel/preset-env"]
        }
    },
    "rules": {
        "no-var": "off", // Disallow var, use let and const instead
        "prefer-const": "off", // Prefer const over let when variable is not reassigned
        "no-unused-vars": "off", // Disallow unused variables (warn instead of error)
        "eqeqeq": "off", // Require === and !==
        "curly": "off", // Require curly braces for all control statements
        "no-debugger": "off", // Disallow debugger statements
        "no-trailing-spaces": "off", // Disallow trailing whitespace
        "eol-last": "off", // Allow files to not end with a newline (warn instead of error)
        "comma-dangle": "off", // Disallow trailing commas
        "object-curly-spacing": "off", // Enforce consistent spacing inside braces
        "array-bracket-spacing": "off", // Enforce consistent spacing inside array brackets
        "arrow-spacing": "off", // Enforce consistent spacing before and after arrow functions
        "space-before-function-paren": "off", // Allow spaces before function parentheses
        "keyword-spacing": "off", // Enforce consistent spacing before and after keywords
        "space-infix-ops": "off", // Require spacing around infix operators
        "key-spacing": "off", // Enforce consistent spacing between keys and values in object literals
        "no-multiple-empty-lines": "off", // Disallow multiple empty lines
        "no-multi-spaces": "off", // Disallow multiple spaces
        "no-whitespace-before-property": "off", // Disallow whitespace before properties
        "space-before-blocks": "off", // Enforce consistent spacing before blocks
        "space-in-parens": "off", // Disallow spaces inside parentheses
        "spaced-comment": "off", // Enforce consistent spacing after the // or /* in a comment
        "consistent-return": "off", // Require return statements to either always or never specify values
        "no-else-return": "off", // Disallow return before else (warn instead of error)
        "no-lonely-if": "off", // Disallow if statements as the only statement in else blocks (warn instead of error)
        "no-nested-ternary": "off", // Disallow nested ternary expressions
        "no-unneeded-ternary": "off", // Disallow ternary operators when simpler alternatives exist (warn instead of error)
        "prefer-arrow-callback": "off" // Prefer arrow functions as callbacks (warn instead of error)
    }
}
